<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/darkPrimaryColor</item>

        <item name="statusBarForeground">@color/darkPrimaryTextColor</item>
        <item name="statusBarBackground">@color/darkPrimaryColor</item>
        <item name="statusBarScrim">@color/darkPrimaryColor</item>

        <item name="android:statusBarColor">@color/darkPrimaryColor</item>
        <item name="android:navigationBarColor">@color/darkPrimaryColor</item>
    </style>

    <style name="TextInputLayout.AppTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/darkPrimaryColor</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="tint">@color/darkPrimaryTextColor</item>
    </style>

    <style name="Toolbar.AppTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="theme">?theme</item>
        <item name="android:background">@color/darkPrimaryColor</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

</resources>