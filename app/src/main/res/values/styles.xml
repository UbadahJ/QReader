<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO: Add light and dark book list accent tint -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="statusBarForeground">@color/primaryTextColor</item>
        <item name="statusBarBackground">@color/primaryColor</item>
        <item name="statusBarScrim">@color/primaryColor</item>

        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>

        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            @color/colorTransparent
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Toolbar.AppTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="theme">?theme</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <style name="TextInputLayout.AppTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/secondaryDarkColor</item>
    </style>

    <style name="FloatingActionButton.AppTheme" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="iconTint">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:fontFamily">@font/elliptica</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="tint">@color/primaryTextColor</item>
    </style>

</resources>